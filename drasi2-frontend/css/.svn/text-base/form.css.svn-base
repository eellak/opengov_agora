/**
 * CSS styles for forms generated by yiic.
 *
 * The styles can be applied to the following form structure:
 *
 * <div class="form">
 *     <div class="row">
 *         <label for="inputid">xyz</label>
 *         <input name="inputid" id="inputid" type="text" />
 *         <p class="hint">hint text</p>
 *     </div>
 *     <div class="row">
 *         <label for="inputid">xyz</label>
 *         <input name="inputid" id="inputid" type="text" />
 *         <p class="hint">hint text</p>
 *     </div>
 *     <div class="row buttons">
 *         <label for="inputid">xyz</label>
 *         <input name="inputid" id="inputid" type="text" />
 *         <p class="hint">hint text</p>
 *     </div>
 * </div>
 *
 * The above code will render the labels and input fields in separate lines.
 * In order to render them in the same line, please use the "wide" form as follows,
 *
 * <div class="wide form">
 *     ......
 * </div>
 *
 * @author Qiang Xue <qiang.xue@gmail.com>
 * @link http://www.yiiframework.com/
 * @copyright Copyright &copy; 2008-2010 Yii Software LLC
 * @license http://www.yiiframework.com/license/
 */

#wrapLogin {
    width:750px;
    margin:0 auto;
    background:#99c;
    }

#sidebarLogin {
    float:right;
    width:300px;
    color:#993366;
    font-weight:bold;
    margin-top:-40px;
}

div.form
{
	width:760px;
}
div.formLogin
{
	float:left;
    width:400px;	
}
.search input,select#OrgIdRef,select#ypoforeis,
div.formLogin input,
div.form input,
div.form textarea,
div.form select
{
	-moz-border-radius:5px; /* Firefox */
	-webkit-border-radius: 5px; /* Safari, Chrome */
	-khtml-border-radius: 5px; /* KHTML */
	margin: 0.5em 0 0.5em 0;
	background-color: #FFFFFF;
    border: 1px solid #D4D4D4;
    color: #464748;
    font-size: 10px;
    padding: 4px 4px 3px;
    min-width: 60px;
}
textearea,select#OrgIdRef,select#ypoforeis,
select {
    background: none repeat scroll 0 0 #FFFFFF;
    border: 1px solid #CCCCCC;
    display: block;
    padding: 8px 5px;
}
select#OrgIdRef,select#ypoforeis {padding:4px;}

select.currency {width:100px;}
select.country  {width:150px;}
select.country1  {width:100px;}

select#OrgIdRef {width:250px;}
select#ypoforeis {width:400px;}

select#Contract_contractType,
select#Contract_contractingAuthority,
select#Procurement_awardProcedure,
select#Rfp_awardProcedure,
select#Contract_awardProcedure,
select#Contract_commissionCriteria {width:150px;}
div.form fieldset
{
	border: 1px solid #DDD;
	padding: 10px;
	margin: 0 0 10px 0;
    -moz-border-radius:7px;
}

div.form fieldset{padding-bottom:20px;background:#e7f0f6;border:1px solid #e7f0f6;-webkit-border-radius: 6px; -moz-border-radius: 6px; padding:10px;}
div.form legend { color:#1772b0;background:#5fa0ca;color:white; padding-left:10px;padding-right:10px; font-size:16px;letter-spacing:2px;}

.search label,
div.formLogin label,
div.form label
{
	font-weight: bold;
	font-size: 0.9em;
	display: block;
	color:#676a6b;
}
.search label{font-size: 1.1em;}

div.form label.ToApprove{
	background: url(../images/bullet.gif) no-repeat;
	font-size: 0.9em;
	background-position:left; 	
	padding-left:11px;
	color:#676a6b;
	font-style:italic;
	font-weight:normal;
}

div.form-group {
    clear: left;
    margin-top: 10px;
}

div.form-group-item {
    float: left;
    margin-right: 20px;
    margin-top: 10px;
}

.search .row, div.form .row, div.form .row-line
{
	/*margin: 5px 0;*/
	 float: left;
    margin-right: 20px;
    margin-top: 10px;
}


div.form .hint
{
	margin: 0;
	padding: 0;
	color: #999;
}

div.form .note
{
	font-style: italic;
}

div.form span.required
{
	color: red;
}


div.form div.error label,
div.form label.error,
div.form span.error
{
	color: #C00;
}

div.form div.error input,
div.form div.error textarea,
div.form div.error select,
div.form input.error,
div.form textarea.error,
div.form select.error
{
	background: #FEE;
	border-color: #C00;
}

div.form div.success input,
div.form div.success textarea,
div.form div.success select,
div.form input.success,
div.form textarea.success,
div.form select.success
{
	background: #E6EFC2;
	border-color: #C6D880;
}


div.form .errorSummary
{
	border: 2px solid #C00;
	padding: 7px 7px 12px 7px;
	margin: 0 0 20px 0;
	background: #FEE;
	font-size: 0.9em;
}

div.form .errorMessage
{
	color: red;
	font-size: 0.8em;
	width:120px;
}
#Contract_noticeADA_em_,#Payments_procurements_em_,
div.form .row-line .errorMessage,#Procurement_title_em_,#Payments_contract_em_,
#Contract_title_em_,#Rfp_title_em_,#Payments_title_em_,#Contractitem_description_em_,
#Contractitem_cpvsid_em_,#LoginForm_username_em_,#LoginForm_password_em_,
#LoginForm_validacion_em_,#Contract_procurements_em_{width:600px;}
#Payments_ADACancel,#Contract_ADACancel,#Procurement_ADACancel,#Rfp_ADACancel{width:100px;}

div.form .errorSummary p
{
	margin: 0;
	padding: 5px;
}

div.form .errorSummary ul
{
	margin: 0;
	padding: 0 0 0 20px;
}
.search row label,
div.wide.form label
{
	float: left;
	margin-right: 10px;
	position: relative;
	text-align: right;
	width: 100px;
}

div.wide.form .row
{
	clear: left;
}

div.wide.form .buttons, div.wide.form .hint, div.wide.form .errorMessage
{
	clear: left;
	padding-left: 10px;
}

/*disabled*/
div.form input[disabled='disabled'], div.form select[disabled='disabled'],div.form textarea[disabled='disabled'] {
  background:#D4D4D4;
  color:blue;
  cursor:default;
}
/*Login form*/
#LoginForm_username,#LoginForm_password {width:200px;}


